@model Web.Model.TarefaViewModel

@if (Model.Lista.Any())
{
    <table id="tblResultado" class="table table-striped table-hover table-bordered table-condensed">
        <thead>
            <tr>
                <th class="center">Titulo</th>
                <th class="center">Descrição</th>
                <th class="center">Data</th>
                @*<th class="center">Editar</th>*@
                <th class="center">Excluir</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Lista)
            {
                <tr class="center">
                    <td>@item.Titulo</td>
                    <td>@item.Descricao</td>
                    <td>@item.DataExecucao.ToString("dd/MM/yyyy HH:mm")</td>
                    @*<td style="width: 1%;">
                            <button onclick="" class="btn btn-xs" title="editar" type="button"><i class="	glyphicon glyphicon-pencil"></i></button>
                        </td>*@
                    <td style="width: 1%;">
                        <button onclick="Excluir(@item.Id);" class="btn" title="excluir" type="button"><i class="glyphicon glyphicon-pencil"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="well well-sm text-center">
        <i class="fa fa-info-circle"></i>A pesquisa não retornou nenhum resultado.
    </div>
}
